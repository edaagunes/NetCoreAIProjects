@using NetCoreAI.Project02_APIConsumeUI.Dtos
@model GetByIdCustomerDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
	<div class="container">
		<input type="hidden" asp-for="CustomerId"/>
		<br /><br />
		<label>Müşteri Adı</label>
		<input type="text" class="form-control" asp-for="Name" />
		<br />
		<label>Müşteri Soyadı</label>
		<input type="text" class="form-control" asp-for="Surname" />
		<br />
		<label>Müşteri Bakiyesi</label>
		<input type="text" class="form-control" asp-for="Balance" />
		<br />
		<button type="submit" class="btn btn-warning">Müşteri Güncelle</button>
	</div>
</form>
