@using NetCoreAI.Project02_APIConsumeUI.Dtos
@model CreateCustomerDto
@{
	Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
	<div class="container">
		<br /><br />
		<label>Müşteri Adı</label>
		<input type="text" class="form-control" asp-for="Name" />
		<br />
		<label>Müşteri Soyadı</label>
		<input type="text" class="form-control" asp-for="Surname" />
		<br />
		<label>Müşteri Bakiyesi</label>
		<input type="text" class="form-control" asp-for="Balance" />
		<br />
		<button type="submit" class="btn btn-primary">Müşteri Ekle</button>
	</div>
</form>